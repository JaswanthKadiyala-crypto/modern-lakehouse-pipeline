# AWS Configuration and Streaming Settings
# Copy this to .env and fill in your values

# AWS Configuration
AWS_BUCKET_NAME=modern-lakehouse-data
AWS_REGION=us-east-1
AWS_PROFILE=default

# Streaming Configuration
STREAMING_ENABLED=true
TEXT_STREAM_INTERVAL=5
CSV_STREAM_INTERVAL=10
IOT_STREAM_INTERVAL=15

# Batch Sizes
TEXT_BATCH_SIZE=100
CSV_BATCH_SIZE=100
IOT_BATCH_SIZE=10

# Data Retention
LIFECYCLE_STANDARD_IA_DAYS=30
LIFECYCLE_GLACIER_DAYS=90
LIFECYCLE_EXPIRATION_DAYS=2555

# Logging
LOG_LEVEL=INFO
LOG_FILE=s3_orchestrator.log

# Partition Settings
PARTITION_DATE_FORMAT=year={year}/month={month:02d}/day={day:02d}
CREATE_DAILY_PARTITIONS=true
